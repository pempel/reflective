server {
  listen 80;
  server_name <%= nginx_server_name %>;

  error_log  <%= nginx_log_path %>/error.log info;
  access_log <%= nginx_log_path %>/access.log;

  location / {
    root <%= nginx_root_path %>;
    index index.html;
  }

  location ~ \.(otf)$ {
    root <%= nginx_root_path %>/fonts;
  }

  location ~ \.(gif|jpg|png)$ {
    root <%= nginx_root_path %>/images;
  }

  location ~ \.(js)$ {
    root <%= nginx_root_path %>/javascripts;
  }

  location ~ \.(css)$ {
    root <%= nginx_root_path %>/stylesheets;
  }
}
